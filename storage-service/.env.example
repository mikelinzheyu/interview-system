# 本地开发配置模板
# 复制为 .env 在本地使用
# ⚠️ 不要提交此文件到 Git！

# ========================================
# Redis 本地配置
# ========================================
SPRING_REDIS_HOST=localhost
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=redis-dev-password
SPRING_REDIS_TIMEOUT=3000ms
SPRING_REDIS_DATABASE=0
SPRING_REDIS_LETTUCE_POOL_MAX_ACTIVE=8
SPRING_REDIS_LETTUCE_POOL_MAX_IDLE=8

# ========================================
# 存储服务配置
# ========================================
SERVER_PORT=8081
SESSION_STORAGE_API_KEY=ak_dev_test_key_12345678901234567890

# ========================================
# Spring 配置
# ========================================
SPRING_PROFILES_ACTIVE=dev

# ========================================
# Java/JVM 配置
# ========================================
JAVA_OPTS=-Xms256m -Xmx512m

# ========================================
# 日志配置
# ========================================
LOGGING_LEVEL_COM_EXAMPLE_INTERVIEWSTORAGE=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_DATA_REDIS=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=DEBUG

# ========================================
# Jackson JSON 配置
# ========================================
SPRING_JACKSON_SERIALIZATION_INDENT_OUTPUT=true
SPRING_JACKSON_DEFAULT_PROPERTY_INCLUSION=non_null

# ========================================
# 时区配置
# ========================================
TZ=Asia/Shanghai
